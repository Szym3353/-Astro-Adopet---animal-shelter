<script>
	let drawer = document.querySelector('.drawer') as HTMLElement
	let drawerShow = document.querySelector('.drawer__show') as HTMLElement
	let drawerHide = document.querySelector('.drawer__hide') as HTMLElement
	
	const toggleDrawer = () => {
		let leftValue = drawer.style.left
		drawer.style.left = `${leftValue === '0px' ?'-100%' : '0px' }`
	}
	
	drawer.addEventListener('click', (e) => {
		if(!e.target) return
		
		let value = e.target as HTMLElement
		value.classList[0] === 'drawer' && toggleDrawer()
	})

	drawerShow.addEventListener('click', toggleDrawer)
	drawerHide.addEventListener('click', toggleDrawer)
	
</script>

<style is:global>
	:root{
		--teal: 105, 133, 192;
		--red: 186, 32, 37;
		--orange: 204, 109, 89;
		--black: 47, 14, 25;
		--white: rgb(243, 244, 245);
		--gradient: linear-gradient(to right, rgb(var(--teal)), rgb(var(--red)), rgb(var(--orange)), rgb(var(--black)))
	}

	html{
		background-color: #fefefe;
	}

	.navbar__brand{
		background-image: var(--gradient);
		background-clip: text;
		color: transparent;
	}
	.drawer{
		transition: 0.3s ease-in-out;
		left: -100%;
		z-index: 1000;
	}


	.gradient-underline{
		position: relative;
	}

	.gradient-underline::after{
		position: absolute;
		content: '';
		bottom: 0;
		left: 50%;
		transform: translateX(-50%);
		width: 100px;
		height: 4px;
		background: var(--gradient);
	}

	.footer{
		background-color: #eee;
		z-index: 100;
		box-shadow: -1px -1px 4px rgba(0,0,0,0.44);
		font-size: 20px;
		flex-wrap: wrap;
	}

	@media screen and (max-width: 780px){
		.footer{
			flex-direction: column;
			align-items: center;
		}

		.footer__info{
			margin: 50px 0;
			text-align: center;
		}

		.footer__info__text{
			justify-content: center;
		}

		.footer__media__svg{
			display: inline-block;
		}
	}

	.footer__info__header{
		color: rgb(var(--orange));
		font-weight: 700;
		margin-top: 10px;
	}

	.footer__info__text{
		display: flex;
		font-size: 17px;
	}

	.footer__media__svg{
		width: 35px;
		height: 35px;
		fill: rgb(var(--orange));
		margin-bottom: 5px;
		cursor: pointer;
		transition: 0.25s;
	}

	.footer__media__svg:hover{
		fill: rgba(var(--orange), 0.7);
	}


	@keyframes animate__slide-from-bottom{
		0%{
			opacity: 0;
			transform: translateY(-20%);
		}
		100%{
			opacity: 1;
			transform: translateY(0);
		}
	}

	.slide-from-bottom{
		animation: animate__slide-from-bottom 1.5s forwards
	}
	
	@keyframes animate__homepage__top__text{
		0%{
			top: 15%;
			opacity: 0;
		}
		100%{
			top: 30%;
			opacity: 1;
		}
	}

	.animate__homepage__top__text{
		animation: animate__homepage__top__text 1.5s forwards;
	}

</style>

---
import Header from "../components/Header.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Contact">
    <div class="contact">
        <Header text="Contact Us" />
        <div class="contact__cards flex flex-wrap gap-5 justify-center py-16">
            <div class="contact__card w-full md:w-1/2 lg:w-1/3">
                <h3 class="contact__form__header text-3xl font-medium">Send a message</h3>
                <form class="contact__form flex flex-col">
                    <label for="contact__form__name" class="contact__form__label">Name</label>
                    <input id="contact__form__name" type="text" class="contact__form__input" />
                    <label for="contact__form__email" class="contact__form__label">E-mail adress</label>
                    <input id="contact__form__email" type="text" class="contact__form__input" />
                    <label for="contact__form__message" class="contact__form__label">Message</label>
                    <textarea rows="5" id="contact__form__message" class="contact__form__input" />
                </form>
            </div>
            <div class="contact__card w-full md:w-1/2 lg:w-1/3 text-lg">
                <h3 class="text-xl font-medium mb-7">Contact details</h3>
                <p class="contact__details__text italic">Adopet</p>
                <p class="contact__details__text">Rnfdfsdg adress da 32<br/>Country, city 37-123</p>
                <p class="contact__details__text">Monday - Friday: 6:00am - 6:00pm</p>
                <p class="contact__details__text">Phone: 123-123-1234</p>
                <button aria-label="Show on map." class="contact__details__show-map text-white p-3 shadow-md">Show on map</button>
                <p class="contact__details__text">Get in touch with us today to learn more about how we're making a difference in the lives of animals. Contact us through our form or call us directly.</p>
            </div>
        </div>
    </div>
</Layout>

<style>
        .contact__card{
        margin: 0 15px;
        background: white;
        border-radius: 10px;
        box-shadow: 1px 1px 5px rgba(0,0,0,0.24);
        padding: 15px 30px;
    }

    .contact__form__header{
        position: relative;
        padding-bottom: 10px;
        margin-bottom: 25px;
    }

    .contact__form__header::before{
        position: absolute;
        content: '';
        background-color: rgb(var(--orange));
        bottom: 0;
        left: 0;
        height: 4px;
        width: 55px;
    }

    .contact__form__label{
        font-size: 15px;
        color: rgba(0,0,0,0.8);
    }

    .contact__form__input{
        border: 1px solid rgba(0,0,0,0.27);
        padding: 5px;
        border-radius: 4px;
        margin-bottom: 20px;
    }

    .contact__details__text{
        margin-bottom: 15px;
    }

    .contact__details__show-map{
        margin-bottom: 15px;
        background-color: rgb(var(--teal));
        border-radius: 5px;
        transition: 0.25s;
    }

    .contact__details__show-map:hover{
        opacity: 0.9;
    }

</style>